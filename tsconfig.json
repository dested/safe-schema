{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "esModuleInterop": true,

    "declaration": true,
    "moduleResolution": "node",
    "declarationMap": true,
    "outDir": "./lib/",
    "sourceMap": true,
    "baseUrl": "./src"
  },
  "exclude": [
    "lib",
    "__tests__",
    "node_modules"
  ]
}
